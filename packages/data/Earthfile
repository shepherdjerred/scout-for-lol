VERSION 0.8
FROM ../../+deno

src:
  COPY src .
  SAVE ARTIFACT *

deps:
  WORKDIR /workspace/packages/data

  # download and cache dependencies
  CACHE --persist $DENO_DIR
  COPY --dir deno* src .
  RUN deno cache src/index.ts

check:
  FROM +deps
  CACHE $DENO_DIR
  RUN deno check src/index.ts
  RUN deno lint
  # RUN deno test -A --unstable
