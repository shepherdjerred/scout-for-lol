VERSION 0.8
FROM ../../+deno

src:
  COPY src .
  SAVE ARTIFACT *

deps:
  WORKDIR /workspace/packages/data

  COPY --dir deno* src .
  RUN deno install --frozen=true

# update Deno lockfile
lock:
  FROM ../../+deno
  COPY --dir deno.json .
  RUN deno install --node-modules-dir=auto
  SAVE ARTIFACT deno.lock AS LOCAL deno.lock

check:
  FROM +deps
  RUN deno check src/index.ts
  RUN deno lint
  # RUN deno test
