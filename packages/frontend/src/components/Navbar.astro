---
interface Props {
  activePage?: "home" | "getting-started" | "docs" | "support" | "whatsnew";
}

const { activePage } = Astro.props;
---

<header class="absolute inset-x-0 top-0 z-50 bg-white">
  <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="sr-only">Scout for League of Legends</span>
        <div class="h-8 w-8 bg-gradient-to-br from-blue-600 to-purple-600 rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-sm">S</span>
        </div>
      </a>
    </div>
    <div class="flex lg:hidden">
      <button
        type="button"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
        id="mobile-menu-button"
      >
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <a
        href="/"
        class:list={["text-sm/6 font-semibold", activePage === "home" ? "text-indigo-600" : "text-gray-900"]}
        >Home</a
      >
      <a
        href="/getting-started"
        class:list={["text-sm/6 font-semibold", activePage === "getting-started" ? "text-indigo-600" : "text-gray-900"]}
        >Getting Started</a
      >
      <a
        href="/docs"
        class:list={["text-sm/6 font-semibold", activePage === "docs" ? "text-indigo-600" : "text-gray-900"]}
        >Documentation</a
      >
      <a
        href="/whatsnew"
        class:list={["text-sm/6 font-semibold", activePage === "whatsnew" ? "text-indigo-600" : "text-gray-900"]}
        >What's New</a
      >
      <a
        href="/support"
        class:list={[
          "text-sm/6 font-semibold inline-flex items-center gap-1",
          activePage === "support" ? "text-indigo-600" : "text-gray-900 hover:text-indigo-600",
        ]}
      >
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 5.25h.008v.008H12v-.008Z"
          ></path>
        </svg>
        Support
      </a>
      <a
        href="https://github.com/shepherdjerred/scout-for-lol"
        target="_blank"
        rel="noopener noreferrer"
        class="text-sm/6 font-semibold text-gray-900 hover:text-indigo-600 inline-flex items-center gap-1"
      >
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path
            fill-rule="evenodd"
            d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
            clip-rule="evenodd"></path>
        </svg>
        GitHub
      </a>
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <a
        href="https://discord.com/oauth2/authorize?client_id=1182800769188110366"
        class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
        >Add to Discord</a
      >
    </div>
  </nav>

  <!-- Mobile menu, show/hide based on menu state -->
  <div class="lg:hidden hidden" id="mobile-menu">
    <div class="space-y-1 px-2 pb-3 pt-2">
      <a
        href="/"
        class:list={[
          "block rounded-md px-3 py-2 text-base font-medium",
          activePage === "home" ? "bg-indigo-50 text-indigo-600" : "text-gray-900 hover:bg-gray-50",
        ]}
        >Home</a
      >
      <a
        href="/getting-started"
        class:list={[
          "block rounded-md px-3 py-2 text-base font-medium",
          activePage === "getting-started" ? "bg-indigo-50 text-indigo-600" : "text-gray-900 hover:bg-gray-50",
        ]}
        >Getting Started</a
      >
      <a
        href="/docs"
        class:list={[
          "block rounded-md px-3 py-2 text-base font-medium",
          activePage === "docs" ? "bg-indigo-50 text-indigo-600" : "text-gray-900 hover:bg-gray-50",
        ]}
        >Documentation</a
      >
      <a
        href="/whatsnew"
        class:list={[
          "block rounded-md px-3 py-2 text-base font-medium",
          activePage === "whatsnew" ? "bg-indigo-50 text-indigo-600" : "text-gray-900 hover:bg-gray-50",
        ]}
        >What's New</a
      >
      <a
        href="/support"
        class:list={[
          "block rounded-md px-3 py-2 text-base font-medium inline-flex items-center gap-2",
          activePage === "support" ? "bg-indigo-50 text-indigo-600" : "text-gray-900 hover:bg-gray-50",
        ]}
      >
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 5.25h.008v.008H12v-.008Z"
          ></path>
        </svg>
        Support
      </a>
      <a
        href="https://github.com/shepherdjerred/scout-for-lol"
        target="_blank"
        rel="noopener noreferrer"
        class="block rounded-md px-3 py-2 text-base font-medium text-gray-900 hover:bg-gray-50 inline-flex items-center gap-2"
      >
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path
            fill-rule="evenodd"
            d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
            clip-rule="evenodd"></path>
        </svg>
        GitHub
      </a>
      <div class="border-t border-gray-200 pt-4 mt-4">
        <a
          href="https://discord.com/oauth2/authorize?client_id=1182800769188110366"
          class="block rounded-md bg-indigo-600 px-3 py-2 text-base font-semibold text-white text-center shadow-sm hover:bg-indigo-500"
          >Add to Discord</a
        >
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');

    if (button && menu) {
      button.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    }
  });
</script>
