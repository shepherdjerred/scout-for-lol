---
interface Props {
  command: string;
  description?: string;
  variant?: 'light' | 'dark';
}

const { command, description, variant = 'light' } = Astro.props;
const bgClass = variant === 'dark' ? 'bg-card' : 'bg-muted';
const textClass = variant === 'dark' ? 'text-card-foreground' : 'text-muted-foreground';
---

<div class={`rounded-md p-4 ${bgClass} ${description ? 'mb-4' : ''}`}>
  <code class={`text-sm ${textClass}`}>
    {command}
  </code>
</div>
{description && (
  <p class="text-xs text-muted-foreground mt-2">{description}</p>
)}
