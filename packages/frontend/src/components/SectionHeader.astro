---
import { Badge } from "@scout-for-lol/frontend/components/ui/badge";

interface Props {
  title: string;
  subtitle?: string;
  badge?: string;
  centered?: boolean;
}

const { title, subtitle, badge, centered = true } = Astro.props;
---

<div class={`mx-auto max-w-2xl ${centered ? "lg:text-center" : ""}`}>
  {badge && <Badge>{badge}</Badge>}
  <p
    class={`mt-2 text-pretty text-4xl font-semibold tracking-tight text-foreground sm:text-5xl ${centered ? "lg:text-balance" : ""}`}
  >
    {title}
  </p>
  {subtitle && <p class="mt-6 text-lg/8 text-muted-foreground">{subtitle}</p>}
</div>
