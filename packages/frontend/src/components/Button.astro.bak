---
interface Props {
  href: string;
  variant?: 'primary' | 'secondary' | 'text';
  size?: 'sm' | 'md' | 'lg';
  color?: 'indigo' | 'white' | 'gray';
  external?: boolean;
  class?: string;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  color = 'indigo',
  external = false,
  class: className = '',
} = Astro.props;

const sizeClasses = {
  sm: 'px-3 py-1.5 text-xs',
  md: 'px-3.5 py-2.5 text-sm',
  lg: 'px-4 py-3 text-base',
};

const variantClasses = {
  primary: {
    indigo: 'rounded-md bg-indigo-600 font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600',
    white: 'rounded-md bg-white font-semibold text-indigo-600 shadow-sm hover:bg-indigo-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white',
    gray: 'rounded-md bg-gray-900 dark:bg-gray-700 font-semibold text-white shadow-sm hover:bg-gray-700 dark:hover:bg-gray-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900',
  },
  secondary: {
    indigo: 'rounded-md border border-indigo-600 dark:border-indigo-400 font-semibold text-indigo-600 dark:text-indigo-400 hover:bg-indigo-50 dark:hover:bg-indigo-900/30',
    white: 'rounded-md border border-white font-semibold text-white hover:bg-white/10',
    gray: 'rounded-md border border-gray-300 dark:border-gray-600 font-semibold text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800',
  },
  text: {
    indigo: 'font-semibold text-indigo-600 dark:text-indigo-400 hover:text-indigo-500 dark:hover:text-indigo-300',
    white: 'font-semibold text-white hover:text-indigo-100 dark:hover:text-indigo-200',
    gray: 'font-semibold text-gray-900 dark:text-white hover:text-gray-700 dark:hover:text-gray-300',
  },
};

const buttonClass = `${sizeClasses[size]} ${variantClasses[variant][color]} ${className}`;

const externalProps = external
  ? {
      target: '_blank',
      rel: 'noopener noreferrer',
    }
  : {};
---

<a href={href} class={buttonClass} {...externalProps}>
  <slot />
  {variant === 'text' && !className.includes('inline-flex') && (
    <span aria-hidden="true">â†’</span>
  )}
</a>
