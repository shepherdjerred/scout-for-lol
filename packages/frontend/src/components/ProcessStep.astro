---
interface Props {
  number: number;
  title: string;
  description: string;
}

const { number, title, description } = Astro.props;
---

<div class="flex flex-col">
  <dt class="flex items-center gap-x-3 text-base/7 font-semibold text-gray-900 dark:text-white">
    <div class="h-10 w-10 flex items-center justify-center rounded-lg bg-indigo-600 text-white font-semibold">
      {number}
    </div>
    {title}
  </dt>
  <dd class="mt-4 flex flex-auto flex-col text-base/7 text-gray-600 dark:text-gray-300">
    <p class="flex-auto">
      {description}
    </p>
  </dd>
</div>
