---
interface Props {
  number: number;
  title: string;
}

const { number, title } = Astro.props;
---

<section class="mb-16">
  <div class="flex items-center mb-6">
    <div class="w-12 h-12 bg-primary text-primary-foreground rounded-full flex items-center justify-center text-xl font-bold mr-4">
      {number}
    </div>
    <h2 class="text-3xl font-bold text-foreground">{title}</h2>
  </div>
  <slot />
</section>
