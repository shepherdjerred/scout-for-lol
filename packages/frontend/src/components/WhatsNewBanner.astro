---
import { changelog, formatChangelogDate } from "../data/changelog";

const latestEntry = changelog[0];
---

{
  latestEntry && (
    <div class="bg-gradient-to-r from-indigo-600 to-blue-600 text-white pt-16 lg:pt-[5.375rem] relative z-40 pointer-events-auto">
      <div class="mx-auto max-w-7xl px-6 py-5 lg:px-8">
        <div class="flex items-center justify-between gap-x-6 select-text">
          <div class="flex items-center gap-x-3">
            <svg class="h-6 w-6 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 18.75a6 6 0 0 0 6-6v-1.5m-6 7.5a6 6 0 0 1-6-6v-1.5m6 7.5v3.75m0 0a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
              />
            </svg>
            <div>
              <p class="text-sm font-semibold leading-tight">What's New - {formatChangelogDate(latestEntry)}</p>
              <p class="text-xs text-indigo-100 leading-snug" set:html={latestEntry.banner} />
            </div>
          </div>
          <a
            href="/whatsnew"
            class="flex-shrink-0 text-sm/6 font-semibold text-white hover:text-indigo-100 transition-colors whitespace-nowrap"
          >
            View all <span aria-hidden="true">â†’</span>
          </a>
        </div>
      </div>
    </div>
  )
}
