---
interface Props {
  imageSrc: string;
  imageAlt: string;
  caption?: string;
  fullWidth?: boolean;
}

const { imageSrc, imageAlt, caption, fullWidth = false } = Astro.props;
---

<div class={fullWidth ? 'w-full' : 'mx-auto max-w-5xl'}>
  <div class="relative">
    <img
      src={imageSrc}
      alt={imageAlt}
      class="w-full rounded-xl shadow-xl ring-1 ring-gray-400/10 dark:ring-gray-600"
      loading="lazy"
    />
    <div class="absolute inset-0 rounded-xl ring-1 ring-inset ring-gray-900/10 dark:ring-gray-100/10"></div>
  </div>
  {caption && (
    <p class="text-sm text-gray-600 dark:text-gray-400 mt-3 text-center">
      {caption}
    </p>
  )}
</div>
