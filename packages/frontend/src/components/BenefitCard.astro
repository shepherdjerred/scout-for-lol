---
interface Props {
  title: string;
  description: string;
  icon: string;
  color?: 'green' | 'blue' | 'purple' | 'indigo' | 'yellow';
}

const { title, description, icon, color = 'green' } = Astro.props;

const colorClasses = {
  green: 'bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400',
  blue: 'bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400',
  purple: 'bg-purple-100 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400',
  indigo: 'bg-indigo-100 dark:bg-indigo-900/30 text-indigo-600 dark:text-indigo-400',
  yellow: 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-600 dark:text-yellow-400',
};
---

<div class="text-center">
  <div class={`mx-auto h-12 w-12 flex items-center justify-center rounded-lg ${colorClasses[color]}`}>
    <div set:html={icon} class="h-6 w-6" />
  </div>
  <h3 class="mt-4 text-lg font-semibold text-gray-900 dark:text-white">{title}</h3>
  <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">
    {description}
  </p>
</div>
