---
interface Props {
  title?: string;
  variant?: 'info' | 'warning' | 'success' | 'danger' | 'note';
  icon?: string; // This will likely be handled by an astro-icon or passed as raw HTML
}

const { title, variant = 'info', icon } = Astro.props;

// Map variants to shadcn/ui inspired classes
const variantClasses = {
  info: {
    bg: 'bg-blue-100 dark:bg-blue-900/30', // Custom class if shadcn doesn't have a direct equivalent
    border: 'border-blue-200 dark:border-blue-700', // Custom class
    title: 'text-blue-800 dark:text-blue-300', // Custom class
    text: 'text-blue-700 dark:text-blue-300', // Custom class
  },
  warning: {
    bg: 'bg-yellow-100 dark:bg-yellow-900/30',
    border: 'border-yellow-200 dark:border-yellow-700',
    title: 'text-yellow-800 dark:text-yellow-300',
    text: 'text-yellow-700 dark:text-yellow-300',
  },
  success: {
    bg: 'bg-green-100 dark:bg-green-900/30',
    border: 'border-green-200 dark:border-green-700',
    title: 'text-green-800 dark:text-green-300',
    text: 'text-green-700 dark:text-green-300',
  },
  danger: {
    bg: 'bg-red-100 dark:bg-red-900/20',
    border: 'border-red-300 dark:border-red-700',
    title: 'text-red-800 dark:text-red-300',
    text: 'text-red-700 dark:text-red-300',
  },
  note: { // Map note to shadcn's muted or secondary if it exists
    bg: 'bg-muted',
    border: 'border',
    title: 'text-foreground',
    text: 'text-muted-foreground',
  },
};

const classes = variantClasses[variant];
---

<div class={`${classes.bg} border ${classes.border} rounded-lg p-6`}>
  {title && (
    <h4 class={`font-semibold ${classes.title} mb-2 flex items-center`}>
      {icon && <span class="mr-2">{icon}</span>}
      {title}
    </h4>
  )}
  <div class={classes.text}>
    <slot />
  </div>
</div>
