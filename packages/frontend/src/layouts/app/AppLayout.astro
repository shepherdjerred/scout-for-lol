---
import "../../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Dashboard" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Scout for LoL</title>
  </head>
  <body class="min-h-screen bg-slate-950 text-white">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="w-64 border-r border-slate-800 bg-slate-900/50">
        <div class="flex h-full flex-col">
          <!-- Logo -->
          <div class="flex items-center gap-3 border-b border-slate-800 px-5 py-6">
            <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-gradient-to-br from-indigo-500 to-amber-500 shadow-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
            </div>
            <div>
              <h1 class="text-lg font-bold text-slate-100">Scout</h1>
              <p class="text-xs text-slate-500">for League of Legends</p>
            </div>
          </div>

          <!-- Navigation -->
          <nav class="flex-1 space-y-1 p-4">
            <a href="/app" class="flex w-full items-center gap-3 rounded-lg px-4 py-3 text-sm font-medium text-slate-400 transition-colors hover:bg-slate-800/50 hover:text-slate-200">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
              </svg>
              Dashboard
            </a>
            <a href="/app/sound-packs" class="flex w-full items-center gap-3 rounded-lg px-4 py-3 text-sm font-medium text-slate-400 transition-colors hover:bg-slate-800/50 hover:text-slate-200">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z" />
              </svg>
              Sound Packs
            </a>
            <a href="/app/settings" class="flex w-full items-center gap-3 rounded-lg px-4 py-3 text-sm font-medium text-slate-400 transition-colors hover:bg-slate-800/50 hover:text-slate-200">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Settings
            </a>
          </nav>

          <!-- User Section -->
          <div class="border-t border-slate-800 p-4">
            <div class="flex items-center justify-between rounded-lg px-4 py-3">
              <div class="flex items-center gap-3">
                <div id="user-avatar" class="h-8 w-8 rounded-full bg-slate-700"></div>
                <span id="user-name" class="text-sm text-slate-400">Loading...</span>
              </div>
              <button
                id="logout-btn"
                class="rounded p-1.5 text-slate-500 transition-colors hover:bg-slate-800 hover:text-slate-300"
                title="Sign out"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 overflow-auto">
        <slot />
      </main>
    </div>
  </body>
</html>

<script>
import { isAuthenticated, clearSessionToken, getApiClient } from "../../lib/trpc";

// Check authentication
if (!isAuthenticated()) {
  window.location.href = "/app/login";
}

interface UserInfo {
  username: string;
  avatar: string | null;
  discordId: string;
}

// Load and display user info
async function loadUser() {
  try {
    // First try to get from localStorage cache
    const cachedUser = localStorage.getItem("scout_user");
    if (cachedUser) {
      const user = JSON.parse(cachedUser) as UserInfo;
      displayUser(user);
    }

    // Then fetch fresh data
    const client = getApiClient();
    const user = await client.auth.me.query();
    localStorage.setItem("scout_user", JSON.stringify(user));
    displayUser(user);
  } catch (error) {
    console.error("Failed to load user:", error);
    if (error instanceof Error && error.message.includes("UNAUTHORIZED")) {
      clearSessionToken();
      window.location.href = "/app/login";
    }
  }
}

function displayUser(user: { username: string; avatar: string | null; discordId: string }) {
  const userAvatar = document.getElementById("user-avatar");
  const userName = document.getElementById("user-name");

  if (userName) {
    userName.textContent = user.username;
  }

  if (userAvatar && user.avatar) {
    const avatarUrl = `https://cdn.discordapp.com/avatars/${user.discordId}/${user.avatar}.png?size=64`;
    userAvatar.style.backgroundImage = `url(${avatarUrl})`;
    userAvatar.style.backgroundSize = "cover";
  }
}

// Handle logout
const logoutBtn = document.getElementById("logout-btn");
logoutBtn?.addEventListener("click", () => {
  clearSessionToken();
  localStorage.removeItem("scout_user");
  window.location.href = "/app/login";
});

// Highlight active nav item
const currentPath = window.location.pathname;
const navLinks = document.querySelectorAll("nav a");
navLinks.forEach((link) => {
  const href = link.getAttribute("href");
  if (href === currentPath || (href === "/app" && currentPath === "/app/")) {
    link.classList.remove("text-slate-400");
    link.classList.add("bg-slate-800/50", "text-slate-200");
  }
});

loadUser();
</script>
