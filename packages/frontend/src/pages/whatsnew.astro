---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import CTA from "../components/CTA.astro";
import { changelog, formatChangelogDate, renderChangelogToHtml } from "../data/changelog";
---

<Layout>
  <div class="bg-white dark:bg-gray-900">
    <Navbar activePage="whatsnew" />

    <!-- Hero Section -->
    <div class="relative isolate px-6 pt-20 lg:px-8">
      <div
        class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
        aria-hidden="true"
      >
        <div
          class="relative left-[calc(50%-11rem)] aspect-1155/678 w-144.5 -translate-x-1/2 rotate-30 bg-linear-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%-30rem)] sm:w-288.75"
          style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
        >
        </div>
      </div>

      <div class="mx-auto max-w-3xl py-16 sm:py-20 lg:py-28">
        <div class="text-center">
          <h1
            class="text-balance text-5xl font-semibold tracking-tight text-gray-900 dark:text-white sm:text-6xl"
          >
            What's New
          </h1>
          <p class="mt-6 text-lg/8 text-gray-600 dark:text-gray-300">
            Check out the latest updates and improvements to Scout for League of
            Legends.
          </p>
        </div>
      </div>
    </div>

    <!-- Changelog Section -->
    <div class="py-24 sm:py-32">
      <div class="mx-auto max-w-3xl px-6 lg:px-8">
        <div class="space-y-12">
          {changelog.map((entry, index) => (
            <div
              class={`pb-12 ${index !== changelog.length - 1 ? "border-b border-gray-200 dark:border-gray-700" : ""}`}
            >
              <!-- Date Header -->
              <div class="mb-6">
                <div class="flex items-center gap-x-3">
                  <div class="h-3 w-3 rounded-full bg-indigo-600 dark:bg-indigo-400"></div>
                  <h2 class="text-2xl font-semibold text-gray-900 dark:text-white">
                    {formatChangelogDate(entry)}
                  </h2>
                </div>
              </div>

              <!-- Changes List -->
              <div class="text-gray-700 dark:text-gray-300 pl-6 space-y-6" set:html={renderChangelogToHtml(entry.text)} />
            </div>
          ))}
        </div>

        {changelog.length === 0 && (
          <div class="text-center py-12">
            <p class="text-gray-600 dark:text-gray-400">
              No changelog entries found. Check back soon!
            </p>
          </div>
        )}
      </div>
    </div>

    <!-- CTA Section -->
    <CTA
      variant="indigo"
      title="Ready to get Scout?"
      description="Add Scout to your Discord server and start tracking your friends' League matches today."
      buttons={[
        { text: 'Add to Discord', href: 'https://discord.com/oauth2/authorize?client_id=1182800769188110366', variant: 'primary' },
        { text: 'Read the docs', href: '/docs', variant: 'secondary' }
      ]}
    />

    <Footer variant="homepage" />
  </div>
</Layout>
