---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <div class="flex min-h-screen items-center justify-center bg-slate-950">
    <div class="w-full max-w-md space-y-8 px-4">
      <!-- Logo -->
      <div class="text-center">
        <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-2xl bg-gradient-to-br from-indigo-500 to-amber-500 shadow-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
          </svg>
        </div>
        <h1 class="mt-6 text-3xl font-bold text-white">Scout for LoL</h1>
        <p class="mt-2 text-slate-400">Sign in to manage your sound packs and settings</p>
      </div>

      <!-- Login Card -->
      <div class="rounded-xl border border-slate-800 bg-slate-900/50 p-8">
        <div id="login-container" class="space-y-6">
          <!-- Loading State -->
          <div id="loading-state" class="hidden">
            <div class="flex items-center justify-center gap-3">
              <svg class="h-5 w-5 animate-spin text-indigo-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              <span class="text-slate-400">Redirecting to Discord...</span>
            </div>
          </div>

          <!-- Error State -->
          <div id="error-state" class="hidden">
            <div class="rounded-lg bg-red-500/10 border border-red-500/30 p-4 text-center">
              <p class="text-red-400" id="error-message">An error occurred</p>
            </div>
          </div>

          <!-- Login Button -->
          <div id="login-button-container">
            <button
              id="login-btn"
              class="flex w-full items-center justify-center gap-3 rounded-lg bg-[#5865F2] px-6 py-3 font-semibold text-white transition-colors hover:bg-[#4752C4] focus:outline-none focus:ring-2 focus:ring-[#5865F2] focus:ring-offset-2 focus:ring-offset-slate-900"
            >
              <svg class="h-6 w-6" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
              </svg>
              Continue with Discord
            </button>
          </div>

          <p class="text-center text-xs text-slate-500">
            By signing in, you agree to our
            <a href="/tos" class="text-indigo-400 hover:underline">Terms of Service</a>
            and
            <a href="/privacy" class="text-indigo-400 hover:underline">Privacy Policy</a>
          </p>
        </div>
      </div>

      <!-- Back Link -->
      <div class="text-center">
        <a href="/" class="text-sm text-slate-400 hover:text-slate-300">
          &larr; Back to home
        </a>
      </div>
    </div>
  </div>
</Layout>

<script>
import { createApiClient, getRedirectUri, isAuthenticated } from "../../lib/trpc";

// If already authenticated, redirect to dashboard
if (isAuthenticated()) {
  window.location.href = "/app";
}

const loginBtn = document.getElementById("login-btn");
const loadingState = document.getElementById("loading-state");
const errorState = document.getElementById("error-state");
const errorMessage = document.getElementById("error-message");
const loginButtonContainer = document.getElementById("login-button-container");

loginBtn?.addEventListener("click", async () => {
  try {
    // Show loading state
    loginButtonContainer?.classList.add("hidden");
    loadingState?.classList.remove("hidden");
    errorState?.classList.add("hidden");

    // Generate a random state for CSRF protection
    const state = crypto.randomUUID();
    sessionStorage.setItem("oauth_state", state);

    // Get OAuth URL from backend
    const client = createApiClient();
    const result = await client.auth.getOAuthUrl.query({
      redirectUri: getRedirectUri(),
      state,
    });

    // Redirect to Discord
    window.location.href = result.url;
  } catch (error) {
    // Show error state
    loadingState?.classList.add("hidden");
    loginButtonContainer?.classList.remove("hidden");
    errorState?.classList.remove("hidden");
    if (errorMessage) {
      errorMessage.textContent = error instanceof Error ? error.message : "Failed to start login";
    }
    console.error("Login error:", error);
  }
});
</script>
