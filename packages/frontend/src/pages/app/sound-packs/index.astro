---
import AppLayout from "../../../layouts/app/AppLayout.astro";
---

<AppLayout title="Sound Packs">
  <div class="p-8">
    <!-- Header -->
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-white">Sound Packs</h1>
        <p class="mt-2 text-slate-400">Create and manage sound packs for game events</p>
      </div>
      <a
        href="/app/sound-packs/new"
        class="flex items-center gap-2 rounded-lg bg-indigo-500 px-4 py-2 font-medium text-white transition-colors hover:bg-indigo-600"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Create Sound Pack
      </a>
    </div>

    <!-- Sound Packs List -->
    <div id="packs-loading" class="flex items-center justify-center rounded-xl border border-slate-800 bg-slate-900/50 p-12">
      <svg class="h-6 w-6 animate-spin text-slate-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </div>

    <div id="packs-empty" class="hidden rounded-xl border border-slate-800 bg-slate-900/50 p-12 text-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-16 w-16 text-slate-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z" />
      </svg>
      <p class="mt-4 text-lg font-medium text-slate-400">No sound packs yet</p>
      <p class="mt-2 text-slate-500">Create your first sound pack to get started</p>
      <a
        href="/app/sound-packs/new"
        class="mt-6 inline-flex items-center gap-2 rounded-lg bg-indigo-500 px-6 py-3 font-medium text-white transition-colors hover:bg-indigo-600"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Create Sound Pack
      </a>
    </div>

    <div id="packs-list" class="hidden grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      <!-- Sound pack cards will be inserted here -->
    </div>
  </div>
</AppLayout>

<script>
import { getApiClient } from "../../../lib/trpc";

interface SoundPack {
  id: number;
  name: string;
  description: string | null;
  version: string;
  isPublic: boolean;
  createdAt: string;
  updatedAt: string;
}

async function loadSoundPacks() {
  const packsLoading = document.getElementById("packs-loading");
  const packsEmpty = document.getElementById("packs-empty");
  const packsList = document.getElementById("packs-list");

  try {
    const client = getApiClient();
    const packs = await client.soundPack.list.query();

    packsLoading?.classList.add("hidden");

    if (packs.length === 0) {
      packsEmpty?.classList.remove("hidden");
    } else {
      packsList?.classList.remove("hidden");
      renderSoundPacks(packs);
    }
  } catch (error) {
    console.error("Failed to load sound packs:", error);
    packsLoading?.classList.add("hidden");
    packsEmpty?.classList.remove("hidden");
  }
}

function renderSoundPacks(packs: SoundPack[]) {
  const packsList = document.getElementById("packs-list");
  if (!packsList) return;

  packsList.innerHTML = packs
    .map(
      (pack) => `
    <a
      href="/app/sound-packs/edit?id=${pack.id}"
      class="group rounded-xl border border-slate-800 bg-slate-900/50 p-6 transition-colors hover:border-slate-700 hover:bg-slate-900"
    >
      <div class="flex items-start justify-between">
        <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-indigo-500/20">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z" />
          </svg>
        </div>
        ${
          pack.isPublic
            ? `
        <span class="rounded-full bg-emerald-500/20 px-2 py-1 text-xs font-medium text-emerald-400">
          Public
        </span>
        `
            : ""
        }
      </div>
      <h3 class="mt-4 font-semibold text-white group-hover:text-indigo-400">${escapeHtml(pack.name)}</h3>
      <p class="mt-1 text-sm text-slate-400">${pack.description ? escapeHtml(pack.description) : "No description"}</p>
      <div class="mt-4 flex items-center gap-4 text-xs text-slate-500">
        <span>v${escapeHtml(pack.version)}</span>
        <span>Updated ${formatDate(pack.updatedAt)}</span>
      </div>
    </a>
  `
    )
    .join("");
}

function formatDate(date: Date | string): string {
  return new Date(date).toLocaleDateString("en-US", {
    month: "short",
    day: "numeric",
  });
}

function escapeHtml(str: string): string {
  const div = document.createElement("div");
  div.textContent = str;
  return div.innerHTML;
}

loadSoundPacks();
</script>
