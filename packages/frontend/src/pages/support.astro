---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <div class="bg-white">
    <Navbar activePage="support" />

    <!-- Main Content -->
    <div class="relative px-6 pt-14 lg:px-8">
      <div class="mx-auto max-w-3xl py-32 sm:py-48 lg:py-56">
        <!-- Page Header -->
        <div class="text-center mb-16">
          <h1
            class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl"
          >
            Get Support
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-600">
            Need help with Scout? We're here to assist you.
          </p>
        </div>

        <!-- Support Options -->
        <div class="space-y-8">
          <!-- Discord Support -->
          <section class="bg-indigo-50 border-2 border-indigo-200 rounded-xl p-8 hover:shadow-lg transition-shadow">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg
                  class="h-12 w-12 text-indigo-600"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"
                  ></path>
                </svg>
              </div>
              <div class="ml-6 flex-1">
                <h2 class="text-2xl font-bold text-gray-900 mb-3">
                  Join Our Discord Server
                </h2>
                <p class="text-gray-700 mb-4">
                  Get quick help from the community and the Scout team. Perfect for:
                </p>
                <ul class="list-disc list-inside space-y-2 text-gray-700 mb-6">
                  <li>Quick questions and troubleshooting</li>
                  <li>Feature requests and suggestions</li>
                  <li>General discussion and tips</li>
                  <li>Real-time support from the community</li>
                </ul>
                <a
                  href="https://discord.gg/qmRewyHXFE"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center rounded-md bg-indigo-600 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-colors"
                >
                  Join Discord Server
                  <svg
                    class="ml-2 -mr-1 h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                    ></path>
                  </svg>
                </a>
              </div>
            </div>
          </section>

          <!-- GitHub Issues -->
          <section class="bg-gray-50 border-2 border-gray-200 rounded-xl p-8 hover:shadow-lg transition-shadow">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg
                  class="h-12 w-12 text-gray-900"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    fill-rule="evenodd"
                    d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                    clip-rule="evenodd"
                  ></path>
                </svg>
              </div>
              <div class="ml-6 flex-1">
                <h2 class="text-2xl font-bold text-gray-900 mb-3">
                  Open a GitHub Issue
                </h2>
                <p class="text-gray-700 mb-4">
                  Report bugs, request features, or track existing issues. Best for:
                </p>
                <ul class="list-disc list-inside space-y-2 text-gray-700 mb-6">
                  <li>Bug reports with detailed information</li>
                  <li>Feature requests with specific use cases</li>
                  <li>Technical discussions and documentation</li>
                  <li>Tracking issue resolution and updates</li>
                </ul>
                <a
                  href="https://github.com/shepherdjerred/scout-for-lol/issues"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center rounded-md bg-gray-900 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900 transition-colors"
                >
                  Open an Issue
                  <svg
                    class="ml-2 -mr-1 h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                    ></path>
                  </svg>
                </a>
              </div>
            </div>
          </section>
        </div>

        <!-- Help Tips -->
        <section class="mt-16">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">
            Before Asking for Help
          </h2>
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
            <ul class="space-y-3 text-blue-900">
              <li class="flex items-start">
                <svg
                  class="h-6 w-6 text-blue-600 mr-3 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
                  ></path>
                </svg>
                <span
                  ><strong>Check the documentation:</strong> Visit our <a
                    href="/docs"
                    class="text-indigo-600 hover:text-indigo-500 underline"
                    >documentation page</a
                  > for comprehensive guides and command references.</span
                >
              </li>
              <li class="flex items-start">
                <svg
                  class="h-6 w-6 text-blue-600 mr-3 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
                  ></path>
                </svg>
                <span
                  ><strong>Use the /help command:</strong> Type <code
                    class="bg-blue-100 px-2 py-1 rounded text-sm">/help</code
                  > in Discord to see available commands and quick tips.</span
                >
              </li>
              <li class="flex items-start">
                <svg
                  class="h-6 w-6 text-blue-600 mr-3 flex-shrink-0"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
                  ></path>
                </svg>
                <span
                  ><strong>Search existing issues:</strong> Your question might
                  already be answered in <a
                    href="https://github.com/shepherdjerred/scout-for-lol/issues"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-indigo-600 hover:text-indigo-500 underline"
                    >existing GitHub issues</a
                  >.</span
                >
              </li>
            </ul>
          </div>
        </section>

        <!-- Back to Home -->
        <div class="mt-16 text-center">
          <a
            href="/"
            class="text-indigo-600 hover:text-indigo-500 font-semibold inline-flex items-center"
          >
            <svg
              class="mr-2 h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18"></path>
            </svg>
            Back to Home
          </a>
        </div>
      </div>
    </div>

    <Footer />
  </div>
</Layout>
