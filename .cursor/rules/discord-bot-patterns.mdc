    await interaction.reply({
      content: `Error: ${getErrorMessage(error)}`,
      flags: MessageFlags.Ephemeral,
    });
    return;
  }

  // ========================================================================
  // Step 5: Success response
  // ========================================================================

  await interaction.reply({
    content: "Success!",
    flags: MessageFlags.Ephemeral,
