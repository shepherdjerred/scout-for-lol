{
  "name": "scout-for-lol",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/data",
    "packages/report",
    "packages/frontend"
  ],
  "trustedDependencies": [
    "husky"
  ],
  "scripts": {
    "typecheck": "bun run --filter='*' typecheck",
    "lint": "bun run --filter='*' lint",
    "format": "bun run --filter='*' format",
    "test": "bun run --filter='*' test",
    "clean": "rm -rf node_modules packages/*/node_modules",
    "generate": "bun run --filter='*' generate",
    "prepare": "husky"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@typescript-eslint/utils": "^8.46.0",
    "@types/node": "^24.0.0",
    "bun-types": "latest",
    "eslint": "^9.30.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bun": "^1.2.18",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.30.1",
    "jiti": "^2.6.0",
    "markdownlint-cli2": "^0.18.0",
    "prettier": "3.6.2",
    "typescript-eslint": "^8.35.1"
  },
  "lint-staged": {
    "*": "bunx prettier --ignore-unknown --write",
    "*.md": "bunx markdownlint-cli2 --fix",
    ".github/workflows/*.{yml,yaml}": "actionlint",
    "packages/backend/**/*.{ts,tsx}": [
      "bash -c 'cd packages/backend && bun run typecheck'",
      "bash -c 'cd packages/backend && bunx eslint --cache --fix'",
      "bash -c 'cd packages/backend && bun run test'"
    ],
    "packages/data/**/*.{ts,tsx}": [
      "bash -c 'cd packages/data && bun run typecheck'",
      "bash -c 'cd packages/data && bunx eslint --cache --fix'",
      "bash -c 'cd packages/data && bun run test'"
    ],
    "packages/frontend/**/*.{ts,tsx,astro}": [
      "bash -c 'cd packages/frontend && bun run typecheck'",
      "bash -c 'cd packages/frontend && bunx eslint --cache --fix'",
      "bash -c 'cd packages/frontend && bun run test'"
    ],
    "packages/report/**/*.{ts,tsx}": [
      "bash -c 'cd packages/report && bun run typecheck'",
      "bash -c 'cd packages/report && bunx eslint --cache --fix'",
      "bash -c 'cd packages/report && bun run test'"
    ]
  },
  "dependencies": {}
}
