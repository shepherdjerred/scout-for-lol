{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "allowJs": true,
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    // Workspace path mappings
    "baseUrl": ".",
    "paths": {
      "@scout-for-lol/backend/*": ["./packages/backend/src/*", "./packages/backend/*"],
      "@scout-for-lol/frontend/*": ["./packages/frontend/src/*"],
      "@scout-for-lol/data/*": ["./packages/data/src/*"],
      "@scout-for-lol/data": ["./packages/data/src/index.ts"],
      "@scout-for-lol/report/*": ["./packages/report/src/*"],
      "@scout-for-lol/report": ["./packages/report/src/index.ts"]
    },
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    // Maximum strictness for safety
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "useUnknownInCatchVariables": true,
    "noUncheckedSideEffectImports": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noErrorTruncation": true,
    // Performance - enable incremental compilation
    "incremental": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "dist", "**/node_modules", "**/dist"]
}
